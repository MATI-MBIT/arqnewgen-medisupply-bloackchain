# Configuración del broker MQTT
MQTT_BROKER=tcp://localhost:1883
MQTT_CLIENT_ID=event-generator
MQTT_TOPIC=events/sensor

# Frecuencia de eventos (en milisegundos)
EVENT_INTERVAL_MILLISECONDS=30000

# Límites de temperatura para generación aleatoria
TEMP_MIN=7.0
TEMP_MAX=12.0

# Puerto del servidor HTTP para health check
HTTP_PORT=8080

# Autenticación (opcional)
MQTT_USERNAME=
MQTT_PASSWORD=

# Para EMQX en Kubernetes
# MQTT_BROKER=tcp://emqx:1883
# MQTT_USERNAME=admin
# MQTT_PASSWORD=public
# EVENT_INTERVAL_MILLISECONDS=10000